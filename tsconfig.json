{
  "compilerOptions": {
    "target": "ESNext",                   
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,                      
    "checkJs": false,
    "jsx": "react-jsx",                  
    "strict": true,                      
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
